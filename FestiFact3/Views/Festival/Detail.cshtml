@model Model.Models.Festival
@{
    ViewBag.Title = "Detail";
}
<div id="bannerImage" class="row" style="height: 400px; background-image: url('@Model.ImageLink'); background-size: 100% 100%"></div>
<div class="row">
    <div class="col-xs-8">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.StartTime)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.StartTime)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.EndTime)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.EndTime)
            </dd>
            <dt>
                TicketsLeft
            </dt>
            <dd>
                @ViewBag.ticketsLeft
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt>
                Performances
            </dt>
            <dd>
                @Html.ActionLink("Show Performances", "Performances", new { id = Model.Id })
            </dd>
        </dl>
    </div>
    <div class="col-xs-4">
        <div>Tickets left: @ViewBag.ticketsLeft</div>
        <div>
            @if (ViewBag.ticketsLeft > 0)
            {
                @Html.ActionLink("Buy Ticket", "BuyTicket", "Ticket", new { id = Model.Id }, new { @class = "btn btn-success" })
            }
            else
            {
                <span>Sold out!</span>
            }
        </div>
    </div>
    <div class="col-xs-4">
            <div>Upvotes: @ViewBag.Upvotes - Downvotes: @ViewBag.Downvotes</div>
            <div>
                @Html.ActionLink("Upvote Festival", "RateFestival", "Festival", new { id = Model.Id, vote = "up" }, new { @class = "btn btn-success" })
                @Html.ActionLink("Downvote Festival", "RateFestival", "Festival", new { id = Model.Id, vote = "down" }, new { @class = "btn btn-danger" })
            </div>
        </div>

</div>
<p>
    @Html.ActionLink("Back to Index", "Index")
</p>
